{
   "compileOnSave": false,
   "buildOnSave": false,
   "compilerOptions": {
      "module": "commonjs",
      "target": "es6",
      "noImplicitAny": false,
      "sourceMap": true,
      "lib": ["es2015", "dom"],
      "outDir": "dist",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true
   },
   "include": [
      "src/**/*.ts"
   ],
   "exclude": [
      "node_modules",
      "src/**/*.spec.ts"
   ],
   "types": [
      "node"
   ]
}
